<phpunit stopOnFailure="true" syntaxCheck="true" strict="true" colors="true">
    <testsuite name="Olcs\XmlTools">
        <directory suffix="Test.php">./</directory>
    </testsuite>
    <filter>
        <whitelist processUncoveredFilesFromWhitelist="true">
            <directory suffix=".php">../src/</directory>
        </whitelist>
    </filter>
    <logging>
        <log type="coverage-html" target="./test/coverage-report" charset="UTF-8"
             yui="true" highlight="true" lowUpperBound="50"
             highLowerBound="80"/>
    </logging>
</phpunit>
