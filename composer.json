{
    "name": "olcs/olcs-xmltools",
    "description": "Xml tools for OLCS",
    "require": {
        "php": "^7.4",
        "laminas/laminas-stdlib": "^3.13",
        "laminas/laminas-servicemanager": "^3.17",
        "laminas/laminas-filter": "^2.22",
        "laminas/laminas-xml": "^1.4",
        "ext-dom": "*",
        "ext-libxml": "*",
        "laminas/laminas-validator": "^2.25"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6",
        "mockery/mockery": "^1.6",
        "johnkary/phpunit-speedtrap": "^4.0",
        "bamarni/composer-bin-plugin": "^1.8",
        "mikey179/vfsstream": "^1.6"
    },
    "autoload": {
        "psr-4": {
            "Olcs\\XmlTools\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "OlcsTest\\XmlTools\\": "test/"
        }
    },
    "scripts": {
        "bin": "echo 'bin not installed'",
        "test": "phpunit",
        "phpcs": "phpcs",
        "psalm": "psalm",
        "phpstan": "phpstan",
        "all": [
            "@test",
            "@phpcs",
            "@psalm",
            "@phpstan"
        ]
    },
    "extra": {
        "bamarni-bin": {
            "bin-links": true,
            "forward-command": true
        }
    },
    "config": {
        "allow-plugins": {
            "bamarni/composer-bin-plugin": true
        }
    }
}
